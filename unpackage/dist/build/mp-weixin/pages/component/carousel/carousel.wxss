.component-carousel{position:relative;width:100%}.component-carousel .carousel-swiper{width:100%;height:100%;overflow:hidden;box-shadow:0 4rpx 12rpx rgba(0,0,0,.1)}.component-carousel .carousel-swiper .swiper-item{position:relative;display:block;width:100%;height:100%;transition:all .3s ease}.component-carousel .carousel-swiper .swiper-item .item-thumb{width:100%;height:100%;background-color:#f5f5f5;transition:-webkit-transform .3s ease;transition:transform .3s ease;transition:transform .3s ease,-webkit-transform .3s ease}.component-carousel .carousel-swiper .swiper-item .item-thumb:hover{-webkit-transform:scale(1.02);transform:scale(1.02)}.component-carousel .carousel-swiper .swiper-item .item-title{position:absolute;bottom:0;left:0;right:0;padding:20rpx;background:linear-gradient(transparent,rgba(0,0,0,.7));color:#fff;font-size:28rpx}.component-carousel .carousel-swiper .swiper-item .item-absolute{display:block;position:absolute;top:0;left:0;right:0;bottom:0}.component-carousel .carousel-dots{position:absolute;z-index:1;display:flex;padding:12rpx;background:rgba(0,0,0,.2);border-radius:20rpx}.component-carousel .carousel-dots .dots-item{width:12rpx;height:12rpx;border-radius:50%;background:hsla(0,0%,100%,.6);margin-right:8rpx;transition:all .3s ease}.component-carousel .carousel-dots .dots-item:last-child{margin-right:0}.component-carousel .carousel-dots .dots-item.active{width:24rpx;background:var(--theme-color);border-radius:6rpx}