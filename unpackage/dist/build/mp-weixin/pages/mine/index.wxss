.container{position:relative;min-height:100vh;background:#f5f6fa}.container .container-image{position:absolute;top:0;left:0;right:0}.container .container-image::after{content:"";position:absolute;left:0;right:0;top:0;bottom:0;background:linear-gradient(180deg,rgba(0,0,0,.1),transparent)}.container .container-main{position:relative;z-index:1;padding:48rpx 32rpx 32rpx}.container .container-main .main-column{padding:28rpx 0 36rpx;border-radius:24rpx;background:#fff;margin-top:32rpx;box-shadow:0 4rpx 16rpx rgba(0,0,0,.05);transition:all .3s ease}.container .container-main .main-column:active{-webkit-transform:scale(.98);transform:scale(.98)}.container .container-main .main-column .column-title{padding:0 32rpx}.container .container-main .main-column .column-title .title{color:#333;font-size:32rpx;font-weight:600;line-height:44rpx}.container .container-main .main-column .column-title .btn{color:#666;font-size:28rpx;line-height:40rpx;padding:4rpx 16rpx;border-radius:20rpx;background:#f5f6fa}.container .container-main .main-column .column-title .btn:active{opacity:.8}.container .container-main .main-column .column-content{margin-top:26rpx}.container .container-main .main-statement{font-size:24rpx;line-height:34rpx;color:#999;margin-top:40rpx;text-align:center}.container .container-main .main-support{margin-top:40rpx}.container .container-main .main-support .image{width:400rpx;height:auto;border-radius:20rpx;box-shadow:0 4rpx 16rpx rgba(0,0,0,.08);transition:all .3s ease}.container .container-main .main-support .image:active{-webkit-transform:scale(.95);transform:scale(.95)}