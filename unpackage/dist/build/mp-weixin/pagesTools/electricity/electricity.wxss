.page-container{min-height:100vh;background-color:#f5f7fa;padding-bottom:40rpx}.main-content{padding:30rpx}.info-card{background:#fff;border-radius:16rpx;padding:30rpx;margin-bottom:30rpx;box-shadow:0 2rpx 12rpx rgba(0,0,0,.05);-webkit-transform:translateY(0);transform:translateY(0);transition:all .3s ease}.info-card-active{-webkit-transform:translateY(0);transform:translateY(0);box-shadow:0 4rpx 16rpx rgba(0,0,0,.1)}.info-header{display:flex;justify-content:space-between;align-items:center;margin-bottom:30rpx;padding-bottom:20rpx;border-bottom:2rpx solid #f5f5f5}.info-title{font-size:32rpx;font-weight:700;color:#333}.balance-text{font-size:32rpx;color:#07c160;font-weight:700}.info-item{display:flex;margin-bottom:20rpx;font-size:28rpx;line-height:1.5}.info-label{color:#666;width:160rpx}.info-value{color:#333;flex:1}.input-card{background:#fff;border-radius:16rpx;padding:30rpx;margin-bottom:30rpx;box-shadow:0 2rpx 12rpx rgba(0,0,0,.05)}.input-wrapper{display:flex;flex-direction:column}.input-label{font-size:28rpx;color:#666;margin-bottom:16rpx}.input-box{display:flex;align-items:center;border-bottom:2rpx solid #eee;padding:16rpx 0}.currency-symbol{font-size:36rpx;color:#333;margin-right:16rpx}.operation-section{padding:20rpx 0}.action-btn{width:100%;height:88rpx;border:none;border-radius:12rpx;font-size:32rpx;font-weight:500;color:#fff;display:flex;align-items:center;justify-content:center;transition:all .2s ease}.btn-icon{font-size:32rpx;margin-right:8rpx}.charge{background:linear-gradient(135deg,#07c160,#0ab956)}.action-btn:active{-webkit-transform:scale(.98);transform:scale(.98);opacity:.9}.footer-actions{width:70%;position:fixed;bottom:100rpx;left:0;right:0;margin:auto;display:flex;align-items:center;background:#fff;border-radius:40rpx;padding:16rpx 40rpx;box-shadow:0 2rpx 12rpx rgba(0,0,0,.1)}.footer-btn{display:flex;align-items:center;font-size:28rpx;color:#1890ff;padding:0 20rpx}.footer-divider{color:#ddd;margin:0 10rpx}.footer-btn:active{opacity:.8}