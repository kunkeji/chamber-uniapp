.container .container-main {
  padding: 48rpx;
}
.container .container-main .main-item {
  margin-top: 32rpx;
}
.container .container-main .main-item .main-item-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #5A5B6E;
}
.container .container-main .main-item .main-item-title .main-item-symbol {
  color: #E60012;
}
.container .container-main .main-item .main-item-input {
  margin-top: 32rpx;
  padding: 36rpx 32rpx;
  border-radius: 16rpx;
  background: #FFFFFF;
  color: #5A5B6E;
  font-size: 28rpx;
  line-height: 40rpx;
}
.container .container-main .main-item .main-item-textarea {
  margin-top: 32rpx;
  padding: 36rpx 32rpx;
  border-radius: 16rpx;
  background: #FFFFFF;
}
.container .container-main .main-item .main-item-textarea .textarea {
  height: 118rpx;
  width: 100%;
}
.container .container-main .main-item .main-item-textarea .placeholder {
  font-size: 28rpx;
  line-height: 40rpx;
  color: #ACADB7;
}
.container .container-main .main-item .main-item-button {
  margin-top: 16rpx;
  padding: 28rpx 0rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  text-align: center;
  color: #FFFFFF;
}
.container .container-main .main-item .main-item-button:first-child {
  margin-top: 0;
}
.container .container-main .main-item .main-form-info {
  border-radius: 16rpx;
  background: transparent;
}
.container .container-main .main-item .main-form-info .item-image {
  width: 240rpx;
  height: 240rpx;
  padding-top: 32%;
  position: relative;
  margin-top: 32rpx;
  margin-right: 2%;
}
.container .container-main .main-item .main-form-info .item-image:nth-child(3n) {
  margin-right: 0;
}
.container .container-main .main-item .main-form-info .item-image .image {
  position: absolute;
  top: 0;
  left: 0;
  border-radius: 10rpx;
}
.container .container-main .main-item .main-form-info .item-image .close {
  position: absolute;
  z-index: 1;
  top: 0;
  right: 0;
  width: 48rpx;
  height: 48rpx;
}
.container .container-main .main-item .main-form-info .item-upload {
  width: 240rpx;
  height: 240rpx;
  padding-top: 32%;
  position: relative;
  margin-top: 32rpx;
  border-radius: 10rpx;
  background: #FFF;
}
.container .container-main .main-item .main-form-info .item-upload .image {
  position: absolute;
  top: 0;
  left: 0;
  border-radius: 10rpx;
  width: 240rpx;
  height: 240rpx;
}
.container .container-main .main-item .main-form-info .item-upload .image-background {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
  background: var(--theme-color);
  opacity: 0.08;
}
.container .container-main .main-item .main-form-info .item-upload .image-choose {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  right: 20rpx;
  bottom: 20rpx;
  z-index: 6;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: #ffffff;
  border-radius: 6rpx;
}
.container .container-main .main-item .main-form-info .item-upload .image-choose .icon {
  width: 80rpx;
  height: 80rpx;
  padding: 18rpx;
  background: var(--theme-color);
  border-radius: 50%;
}
.container .container-main .main-item .main-form-info .item-upload .image-choose .text {
  margin-top: 16rpx;
  color: var(--theme-color);
  font-size: 28rpx;
  line-height: 40rpx;
}
.container .container-main .main-item:first-child {
  margin-top: 0;
}

