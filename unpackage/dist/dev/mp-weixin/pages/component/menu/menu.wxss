.component-menu {
  padding: 4rpx;
}
.component-menu .menu-item {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: transparent;
  padding: 6rpx;
  transition: all 0.2s;
}
.component-menu .menu-item.menu-btn::after {
  border: none;
}
.component-menu .menu-item .icon-box {
  width: 90rpx;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 18rpx;
  background: rgba(245, 245, 245, 0.5);
}
.component-menu .menu-item .icon-box image {
  will-change: transform;
}
.component-menu .menu-item text {
  width: 100%;
  padding: 0 8rpx;
  box-sizing: border-box;
  text-align: center;
}
.component-menu .menu-item:active {
  opacity: 0.7;
  -webkit-transform: scale(0.98);
          transform: scale(0.98);
}
.component-menu .menu-item .item-absolute {
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

