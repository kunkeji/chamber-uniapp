page {
  background: #fff;
}
.container .container-main {
  padding: 96rpx 60rpx 0;
}
.container .container-main .main-header {
  width: 100%;
  height: 500rpx;
}
.container .container-main .main-login {
  margin-top: 76rpx;
}
.container .container-main .main-login .login-title {
  color: #585858;
  font-size: 34rpx;
}
.container .container-main .main-login .login-subtitle {
  color: #888;
  font-size: 28rpx;
  margin-top: 40rpx;
}
.container .container-main .main-login .login-info {
  margin-top: 48rpx;
}
.container .container-main .main-login .login-info .info-item {
  display: flex;
  align-items: center;
  background: #ffffff;
  border-bottom: 1rpx solid #F6F7FB;
}
.container .container-main .main-login .login-info .info-item .item-title {
  margin-right: 40rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #000000;
}
.container .container-main .main-login .login-info .info-item .item-avatar {
  flex: 1;
  padding: 32rpx 0;
  height: 80rpx;
  background: transparent;
  box-sizing: content-box;
  display: flex;
  justify-content: flex-start;
}
.container .container-main .main-login .login-info .info-item .item-avatar::after {
  border: none;
}
.container .container-main .main-login .login-info .info-item .item-avatar .image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.container .container-main .main-login .login-info .info-item .item-nickname {
  flex: 1;
  font-size: 28rpx;
  line-height: 40rpx;
  padding: 32rpx 0;
  box-sizing: content-box;
}
.container .container-main .main-login .login-info .info-btn {
  height: 88rpx;
  line-height: 88rpx;
  font-size: 28rpx;
  border-radius: 16rpx;
  text-align: center;
  background: var(--theme-color);
  color: #ffffff;
}
.container .container-main .main-login .login-info .info-btn.cancel {
  background: #eee;
  color: #999;
  margin-top: 24rpx;
}
.container .container-main .main-form {
  margin-top: 96rpx;
}
.container .container-main .main-form .form-input {
  border-radius: 16rpx;
  border: 1rpx solid #F0F0F0;
  background: #FFF;
  margin-top: 32rpx;
}
.container .container-main .main-form .form-input:first-child {
  margin-top: 0;
}
.container .container-main .main-form .form-input .input {
  color: #5A5B6E;
  font-size: 28rpx;
  line-height: 40rpx;
  padding: 36rpx 32rpx;
}
.container .container-main .main-form .form-input .placeholder {
  color: #ACADB7;
}
.container .container-main .main-form .form-input .btn {
  padding: 0 24rpx;
  color: var(--theme-color);
  font-size: 28rpx;
  line-height: 40rpx;
}
.container .container-main .main-form .form-input .countdown {
  padding: 0 24rpx;
  color: #666;
  font-size: 28rpx;
  line-height: 40rpx;
}
.container .container-main .main-form .form-btn {
  color: #FFF;
  font-size: 28rpx;
  line-height: 40rpx;
  padding: 36rpx;
  border-radius: 16rpx;
  background: var(--theme-color);
  margin-top: 48rpx;
  text-align: center;
}
.container .container-main .main-form .form-read {
  margin-top: 52rpx;
}
.container .container-main .main-form .form-read .radio {
  width: 32rpx;
  height: 32rpx;
  background: #D6DBDE;
  border-radius: 50%;
}
.container .container-main .main-form .form-read .radio.active {
  background: var(--theme-color);
}
.container .container-main .main-form .form-read .label {
  margin-left: 20rpx;
  color: #5A5B6E;
  font-size: 24rpx;
  line-height: 34rpx;
}
.container .container-main .main-form .form-read .label text {
  color: var(--theme-color);
}

