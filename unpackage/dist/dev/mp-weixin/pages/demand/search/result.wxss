  border-radius: 16rpx;
  width: 100%;
  height: 200rpx;
}
.container .container-main .main-demand .demand-info .two-images::after {
  width: 200rpx;
  content: '';
}
.container .container-main .main-demand .demand-browse {
  padding-top: 24rpx;
  display: flex;
}
.container .container-main .main-demand .demand-browse .demand-browse-num {
  flex: 1;
  font-size: 24rpx;
  line-height: 34rpx;
  color: #999999;
}
.container .container-main .main-demand .demand-browse .demand-browse-share {
  display: flex;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #5A5B6E;
}
.container .container-main .main-demand .demand-browse .demand-browse-share .share-img {
  width: 32rpx;
  height: 32rpx;
}
.container .container-main .main-demand .demand-browse .demand-browse-share .share-txt {
  padding-left: 8rpx;
  font-size: 28rpx;
  line-height: 40rpx;
