.container .container-main {
  padding: 32rpx;
}
.container .container-main .main-demand {
  margin-bottom: 32rpx;
  padding: 32rpx;
  border-radius: 16rpx;
  background: #FFFFFF;
}
.container .container-main .main-demand .demand-person .demand-person-img {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
}
.container .container-main .main-demand .demand-person .demand-person-info {
  flex: 1;
  padding-left: 24rpx;
  color: #666666;
}
.container .container-main .main-demand .demand-person .demand-person-info .info-name {
  font-size: 32rpx;
  font-weight: 600;
  line-height: 44rpx;
  color: #5A5B6E;
}
.container .container-main .main-demand .demand-person .demand-person-info .info-level {
  display: flex;
  padding-top: 12rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #666666;
}
.container .container-main .main-demand .demand-person .demand-person-info .info-level .info-level-rank {
  padding-right: 8rpx;
}
.container .container-main .main-demand .demand-person .demand-person-info .info-level .info-level-time {
  padding-left: 8rpx;
}
.container .container-main .main-demand .demand-person .demand-person-contact {
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  background: #325DFF;
  color: #FFFFFF;
}
.container .container-main .main-demand .demand-info {
  padding-top: 32rpx;
}
.container .container-main .main-demand .demand-info .demand-info-title {
  font-size: 32rpx;
  font-weight: 600;
  line-height: 44rpx;
  color: #5A5B6E;
}
.container .container-main .main-demand .demand-info .demand-info-introduce {
  padding-top: 24rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #5A5B6E;
}
