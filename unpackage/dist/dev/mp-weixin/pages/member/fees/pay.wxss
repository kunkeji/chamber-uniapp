.container .container-main {
  padding: 32rpx 32rpx 144rpx;
}
.container .container-main .main-header {
  border-radius: 16rpx;
  box-shadow: 0 0 20rpx 0 rgba(0, 0, 0, 0.02);
  background: #ffffff;
  padding: 38rpx 32rpx;
}
.container .container-main .main-header .header-price {
  color: var(--theme-color);
  font-size: 48rpx;
  font-weight: 600;
  text-align: center;
}
.container .container-main .main-header .header-price text {
  font-size: 24rpx;
}
.container .container-main .main-header .header-tag {
  margin-top: 26rpx;
  color: #8D929C;
  font-size: 28rpx;
  line-height: 40rpx;
  text-align: center;
}
.container .container-main .main-content .content-column {
  margin-top: 32rpx;
  padding: 32rpx;
  border-radius: 16rpx;
  box-shadow: 0 0 20rpx 0 rgba(0, 0, 0, 0.02);
  background: #ffffff;
}
.container .container-main .main-content .content-column .column-title {
  color: #5A5B6E;
  font-size: 32rpx;
  font-weight: 600;
  line-height: 44rpx;
}
.container .container-main .main-content .content-column .column-method {
  margin-top: 32rpx;
}
.container .container-main .main-content .content-column .column-method .method-item {
  margin-top: 32rpx;
}
.container .container-main .main-content .content-column .column-method .method-item:first-child {
  margin-top: 0;
}
.container .container-main .main-content .content-column .column-method .method-item .icon {
  width: 32rpx;
  height: 32rpx;
  background-size: 32rpx;
}
.container .container-main .main-content .content-column .column-method .method-item .name {
  color: #5A5B6E;
  font-size: 28rpx;
  line-height: 40rpx;
  margin: 0 16rpx;
}
.container .container-main .main-content .content-column .column-method .method-item .radio {
  width: 32rpx;
  height: 32rpx;
  background: #D6DBDE;
  border-radius: 50%;
}
.container .container-main .main-content .content-column .column-method .method-item .radio.active {
  background: var(--theme-color);
}
.container .container-main .main-content .content-column .column-upload {
  display: flex;
  flex-wrap: wrap;
  padding-top: 8rpx;
}
.container .container-main .main-content .content-column .column-upload .upload-image {
  position: relative;
  width: 31%;
  height: 0;
  padding-top: 31%;
  margin-top: 24rpx;
  margin-right: 3.5%;
}
.container .container-main .main-content .content-column .column-upload .upload-image:nth-child(3n) {
  margin-right: 0;
}
.container .container-main .main-content .content-column .column-upload .upload-image .image-select {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: 10rpx;
}
.container .container-main .main-content .content-column .column-upload .upload-image .image-video {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: 10rpx;
  background: var(--theme-color);
  padding: 56rpx;
}
.container .container-main .main-content .content-column .column-upload .upload-image .image-delete {
  position: absolute;
  top: -16rpx;
  right: -16rpx;
  width: 48rpx;
  height: 48rpx;
}
.container .container-main .main-content .content-column .column-upload .upload-image .image-choose {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  right: 20rpx;
  bottom: 20rpx;
  z-index: 6;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: #ffffff;
  border-radius: 6rpx;
}
.container .container-main .main-content .content-column .column-upload .upload-image .image-choose .icon {
  width: 80rpx;
  height: 80rpx;
  padding: 18rpx;
  background: var(--theme-color);
  border-radius: 50%;
}
.container .container-main .main-content .content-column .column-upload .upload-image .image-choose .text {
  margin-top: 16rpx;
  color: var(--theme-color);
  font-size: 28rpx;
  line-height: 40rpx;
}
.container .container-main .main-content .content-column .column-upload .upload-image .image-background {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
  background: var(--theme-color);
  opacity: 0.08;
}
.container .container-main .main-content .content-column .column-info {
  margin-top: 24rpx;
}
.container .container-main .main-content .content-column .column-info .info-item {
  margin-top: 24rpx;
}
.container .container-main .main-content .content-column .column-info .info-item:first-child {
  margin-top: 0;
}
.container .container-main .main-content .content-column .column-info .info-item .item-content {
  color: #5A5B6E;
  font-size: 28rpx;
  line-height: 40rpx;
}
.container .container-main .main-content .content-column .column-info .info-item .item-copy {
  color: var(--theme-color);
  font-size: 28rpx;
  line-height: 40rpx;
  margin-left: 24rpx;
}
.container .container-main .main-footer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 99;
  padding: 12rpx 32rpx;
  background: #ffffff;
  border-top: 1rpx solid #F6F7FB;
}
.container .container-main .main-footer .footer-btn {
  color: #ffffff;
  font-size: 32rpx;
  line-height: 44rpx;
  padding: 22rpx 24rpx;
  border-radius: 16rpx;
  background: var(--theme-color);
  text-align: center;
}

