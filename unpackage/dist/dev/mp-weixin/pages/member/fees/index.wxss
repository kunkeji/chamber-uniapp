.container .container-main .main-tips {
  padding: 24rpx 32rpx;
  font-size: 24rpx;
  line-height: 34rpx;
  color: #F6F7FB;
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  z-index: 9;
}
.container .container-main .main-header {
  padding: 32rpx 32rpx 20rpx;
  position: relative;
}
.container .container-main .main-header .header-box {
  border-radius: 10rpx;
  background: var(--theme-color);
  padding: 16rpx;
  position: relative;
}
.container .container-main .main-header .header-box .box-line {
  border: 1rpx solid #ffffff;
  border-bottom: none;
  border-radius: 10rpx;
  padding: 48rpx 32rpx 66rpx;
}
.container .container-main .main-header .header-box .box-line .price {
  color: #ffffff;
  font-size: 72rpx;
  font-weight: 600;
  line-height: 60rpx;
}
.container .container-main .main-header .header-box .box-line .price text {
  font-size: 36rpx;
}
.container .container-main .main-header .header-box .box-line .term {
  margin-top: 24rpx;
  color: #ffffff;
  font-size: 24rpx;
  line-height: 34rpx;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  background: rgba(255, 255, 255, 0.25);
}
.container .container-main .main-header .header-box .box-line .level {
  position: absolute;
  top: 48rpx;
  left: 0;
  color: var(--theme-color);
  font-size: 20rpx;
  line-height: 28rpx;
  padding: 10rpx;
  border-radius: 0 8rpx 8rpx 0;
  background: #ffffff;
}
.container .container-main .main-header .header-pocket {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 1;
  width: 100%;
  height: 120rpx;
  background-size: 100% 120rpx;
  background-repeat: no-repeat;
}
.container .container-main .main-content {
  background: linear-gradient(180deg, white, rgba(246, 247, 251, 0) 100%);
  padding: 32rpx;
}
.container .container-main .main-content .content-column {
  margin-top: 48rpx;
}
.container .container-main .main-content .content-column:first-child {
  margin-top: 0;
}
.container .container-main .main-content .content-column .column-title {
  color: #5A5B6E;
  font-size: 32rpx;
  font-weight: 600;
  line-height: 44rpx;
}
.container .container-main .main-content .content-column .column-text {
  color: #5A5B6E;
  font-size: 28rpx;
  line-height: 40rpx;
}
.container .container-main .main-content .content-column .column-content {
  padding: 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 0 20rpx 0 rgba(0, 0, 0, 0.02);
  background: #ffffff;
  margin-top: 32rpx;
}
.container .container-main .main-content .content-column .column-content .detail-list .list-item {
  margin-top: 32rpx;
}
.container .container-main .main-content .content-column .column-content .detail-list .list-item:first-child {
  margin-top: 0;
}
.container .container-main .main-content .content-column .column-content .detail-list .list-item .item-info .info-name {
  color: #5A5B6E;
  font-size: 28rpx;
  line-height: 40rpx;
}
.container .container-main .main-content .content-column .column-content .detail-list .list-item .item-info .info-time {
  margin-top: 16rpx;
  color: #8D929C;
  font-size: 24rpx;
  line-height: 34rpx;
}
.container .container-main .main-content .content-column .column-content .detail-list .list-item .item-price {
  margin-left: 24rpx;
  color: var(--theme-color);
  font-size: 28rpx;
  line-height: 40rpx;
}
.container .container-main .main-content .content-column .column-content .detail-empty {
  color: #8D929C;
  font-size: 28rpx;
  line-height: 40rpx;
  padding: 48rpx 32rpx;
  text-align: center;
}
.container .container-main .main-footer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 99;
  padding: 12rpx 32rpx;
  background: #ffffff;
  border-top: 1rpx solid #F6F7FB;
}
.container .container-main .main-footer .footer-price .unit {
  color: var(--theme-color);
  font-size: 32rpx;
  line-height: 44rpx;
}
.container .container-main .main-footer .footer-price .number {
  margin-left: 16rpx;
  color: var(--theme-color);
  font-size: 40rpx;
  font-weight: 600;
  line-height: 56rpx;
}
.container .container-main .main-footer .footer-btn {
  margin-left: 40rpx;
  color: #ffffff;
  font-size: 32rpx;
  line-height: 44rpx;
  padding: 22rpx 24rpx;
  border-radius: 16rpx;
  background: var(--theme-color);
  text-align: center;
}

