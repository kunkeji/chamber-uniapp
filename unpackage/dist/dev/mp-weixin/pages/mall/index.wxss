.container .container-main {
  padding: 32rpx;
}
.container .container-main .main-carousel {
  padding-bottom: 32rpx;
}
.container .container-main .main-screen {
  padding: 32rpx;
  border-radius: 20rpx;
  background: #FFFFFF;
}
.container .container-main .main-screen .screen-scroll {
  white-space: nowrap;
}
.container .container-main .main-screen .screen-scroll .screen-item {
  width: 25%;
  display: inline-block;
  text-align: center;
}
.container .container-main .main-screen .screen-scroll .screen-item .screen-item-img {
  display: inline-block;
  vertical-align: middle;
}
.container .container-main .main-screen .screen-scroll .screen-item .screen-item-img .screen-item-img-size {
  width: 96rpx;
  height: 96rpx;
}
.container .container-main .main-screen .screen-scroll .screen-item .screen-item-txt {
  padding-top: 8rpx;
  font-size: 24rpx;
  line-height: 34rpx;
  color: #5A5B6E;
}
.container .container-main .main-column {
  margin-top: 32rpx;
  padding: 24rpx 32rpx 32rpx;
  background: #fff;
  border-radius: 20rpx;
}
.container .container-main .main-column .main-title {
  font-weight: 600;
  font-size: 36rpx;
  line-height: 50rpx;
  color: #000000;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.container .container-main .main-column .main-title .main-title-txt {
  font-size: 32rpx;
  font-weight: 600;
  line-height: 44rpx;
  color: #5A5B6E;
}
.container .container-main .main-column .main-title .main-title-hot-label {
  margin-left: 18rpx;
  height: 36rpx;
  width: 104rpx;
  background: linear-gradient(95.66deg, #FF6E6E 0%, #FF0000 100%);
  border-radius: 20rpx;
  border: 2rpx solid #FFE6A8;
  display: flex;
  align-items: center;
  justify-content: center;
}
.container .container-main .main-column .main-title .main-title-hot-label text {
  font-size: 24rpx;
  line-height: 24rpx;
  color: #FFFFFF;
}
.container .container-main .main-column .main-title .main-title-hot-label image {
  margin-left: 4rpx;
  width: 24rpx;
  height: 24rpx;
}

