
.page-container.data-v-4a0f4f67 {
	min-height: 100vh;
	background: #f5f7fa;
	padding-bottom: env(safe-area-inset-bottom);
}

/* 店铺头部样式 */
.shop-header.data-v-4a0f4f67 {
	background: #fff;
	padding: 30rpx;
	position: relative;
	box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}
.shop-info.data-v-4a0f4f67 {
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.dropdown.data-v-4a0f4f67 {
	display: flex;
	align-items: center;
	padding: 12rpx 24rpx;
	background: #f8f9fa;
	border-radius: 12rpx;
}
.shop-logo.data-v-4a0f4f67 {
	width: 60rpx;
	height: 60rpx;
	border-radius: 50%;
	margin-right: 16rpx;
}
.shop-name.data-v-4a0f4f67 {
	font-size: 32rpx;
	font-weight: 500;
	color: #333;
	margin-right: 12rpx;
}
.dropdown-icon.data-v-4a0f4f67 {
	font-size: 24rpx;
	color: #999;
	transition: -webkit-transform 0.3s;
	transition: transform 0.3s;
	transition: transform 0.3s, -webkit-transform 0.3s;
}
.dropdown-icon.active.data-v-4a0f4f67 {
	-webkit-transform: rotate(180deg);
	        transform: rotate(180deg);
}
.business-status.data-v-4a0f4f67 {
	display: flex;
	align-items: center;
	gap: 16rpx;
}
.business-status text.data-v-4a0f4f67 {
	font-size: 28rpx;
	color: #999;
}
.business-status text.open.data-v-4a0f4f67 {
	color: #07c160;
}

/* 营业额卡片样式 */
.revenue-cards.data-v-4a0f4f67 {
	display: flex;
	padding: 20rpx;
	gap: 20rpx;
}
.revenue-card.data-v-4a0f4f67 {
	flex: 1;
	background: linear-gradient(135deg, #1890ff, #40a9ff);
	padding: 30rpx 20rpx;
	border-radius: 16rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	color: #fff;
}
.revenue-value.data-v-4a0f4f67 {
	font-size: 36rpx;
	font-weight: bold;
	margin-bottom: 8rpx;
}
.revenue-label.data-v-4a0f4f67 {
	font-size: 24rpx;
	opacity: 0.9;
}

/* 快捷功能按钮 */
.quick-actions.data-v-4a0f4f67 {
	display: flex;
	padding: 30rpx;
	gap: 30rpx;
}
.action-btn.data-v-4a0f4f67 {
	flex: 1;
	background: #fff;
	padding: 24rpx;
	border-radius: 16rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	gap: 12rpx;
	box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}
.action-icon.data-v-4a0f4f67 {
	font-size: 40rpx;
}
.action-btn text.data-v-4a0f4f67:last-child {
	font-size: 28rpx;
	color: #666;
}

/* 订单状态切换 */
.order-status-tabs.data-v-4a0f4f67 {
	display: flex;
	background: #fff;
	padding: 20rpx;
	gap: 20rpx;
	margin: 20rpx 0;
	overflow-x: auto;
	white-space: nowrap;
}
.status-tab.data-v-4a0f4f67 {
	padding: 16rpx 32rpx;
	font-size: 28rpx;
	color: #666;
	border-radius: 8rpx;
	transition: all 0.3s;
}
.status-tab.active.data-v-4a0f4f67 {
	background: #1890ff;
	color: #fff;
}

/* 订单列表样式 */
.order-list.data-v-4a0f4f67 {
	height: calc(100vh - 450rpx);
	padding: 20rpx;
	box-sizing: border-box;
}
.order-card.data-v-4a0f4f67 {
	background: #fff;
	border-radius: 16rpx;
	padding: 30rpx;
	margin-bottom: 20rpx;
	box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
	width: auto;
	box-sizing: border-box;
}
.order-header.data-v-4a0f4f67 {
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 20rpx;
	padding-bottom: 20rpx;
	border-bottom: 2rpx solid #f5f5f5;
}
.order-number.data-v-4a0f4f67 {
	font-size: 28rpx;
	color: #666;
}
.order-type.data-v-4a0f4f67 {
	font-size: 26rpx;
	color: #1890ff;
	background: rgba(24, 144, 255, 0.1);
	padding: 6rpx 16rpx;
	border-radius: 6rpx;
}
.order-info.data-v-4a0f4f67 {
	font-size: 28rpx;
}
.time-info.data-v-4a0f4f67, .address-info.data-v-4a0f4f67 {
	margin-bottom: 16rpx;
}
.info-label.data-v-4a0f4f67 {
	color: #999;
}
.info-value.data-v-4a0f4f67 {
	color: #333;
}
.goods-list.data-v-4a0f4f67 {
	background: #f8f9fa;
	padding: 20rpx;
	border-radius: 8rpx;
	margin: 16rpx 0;
	width: 100%;
	box-sizing: border-box;
}
.goods-item.data-v-4a0f4f67 {
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 12rpx;
	flex-wrap: nowrap;
}
.goods-name.data-v-4a0f4f67 {
	flex: 1;
	color: #333;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	margin-right: 20rpx;
}
.goods-quantity.data-v-4a0f4f67 {
	color: #666;
	margin: 0 20rpx;
}
.goods-price.data-v-4a0f4f67 {
	color: #ff4d4f;
}
.order-total.data-v-4a0f4f67 {
	text-align: right;
	margin-top: 16rpx;
}
.total-amount.data-v-4a0f4f67 {
	font-size: 32rpx;
	font-weight: bold;
	color: #ff4d4f;
}
.order-actions.data-v-4a0f4f67 {
	margin-top: 20rpx;
	display: flex;
	justify-content: flex-end;
}
.action-button.data-v-4a0f4f67 {
	background: #07c160;
	color: #fff;
	font-size: 28rpx;
	padding: 16rpx 32rpx;
	border-radius: 8rpx;
	border: none;
	min-width: 160rpx;
	transition: all 0.3s ease;
}
.action-button.data-v-4a0f4f67:disabled {
	background: #a8e6c1;
	cursor: not-allowed;
	opacity: 0.7;
}
.action-button.data-v-4a0f4f67:active:not(:disabled) {
	opacity: 0.8;
}

/* 下拉菜单样式 */
.dropdown-menu.data-v-4a0f4f67 {
	position: absolute;
	top: 100%;
	left: 30rpx;
	right: 30rpx;
	background: #fff;
	border-radius: 16rpx;
	box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
	z-index: 100;
	max-height: 400rpx;
	overflow-y: auto;
}
.dropdown-item.data-v-4a0f4f67 {
	display: flex;
	align-items: center;
	padding: 24rpx;
	border-bottom: 2rpx solid #f5f5f5;
}
.dropdown-item.data-v-4a0f4f67:last-child {
	border-bottom: none;
}
.dropdown-item.data-v-4a0f4f67:active {
	background: #f8f9fa;
}

/* 添加空状态样式 */
.empty-state.data-v-4a0f4f67 {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	padding: 60rpx 0;
}
.empty-text.data-v-4a0f4f67 {
	font-size: 28rpx;
	color: #999;
}

/* 添加加载状态样式 */
.loading.data-v-4a0f4f67 {
	opacity: 0.6;
	pointer-events: none;
}

