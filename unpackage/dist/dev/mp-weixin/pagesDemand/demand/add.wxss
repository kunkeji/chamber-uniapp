.container {
  padding-bottom: 200rpx;
}
.container .main-form {
  padding: 16rpx 48rpx;
}
.container .main-form .main-form-item {
  margin-top: 32rpx;
}
.container .main-form .main-form-item .main-form-title {
  padding-bottom: 32rpx;
  font-size: 32rpx;
  color: #5A5B6E;
}
.container .main-form .main-form-item .main-form-info {
  padding: 36rpx 32rpx;
  border-radius: 16rpx;
  background: #FFFFFF;
}
.container .main-form .main-form-item .main-form-info .info-txt {
  flex: 1;
  font-size: 28rpx;
  color: #ACADB7;
}
.container .main-form .main-form-item .main-form-info .info-icon {
  width: 32rpx;
  height: 32rpx;
}
.container .main-form .main-form-item .main-form-info .placeholder {
  font-size: 28rpx;
  color: #ACADB7;
}
.container .main-form .main-form-item .main-form-info .item-image {
  width: 32%;
  height: 0;
  padding-top: 32%;
  position: relative;
  margin-top: 32rpx;
  margin-right: 2%;
}
.container .main-form .main-form-item .main-form-info .item-image:nth-child(3n) {
  margin-right: 0;
}
.container .main-form .main-form-item .main-form-info .item-image .image {
  position: absolute;
  top: 0;
  left: 0;
  border-radius: 10rpx;
}
.container .main-form .main-form-item .main-form-info .item-image .close {
  position: absolute;
  z-index: 1;
  top: 0;
  right: 0;
  width: 48rpx;
  height: 48rpx;
}
.container .main-form .main-form-item .main-form-info .item-upload {
  width: 32%;
  height: 0;
  padding-top: 32%;
  position: relative;
  margin-top: 32rpx;
  border-radius: 10rpx;
  background: #FFF;
}
.container .main-form .main-form-item .main-form-info .item-upload .image {
  position: absolute;
  top: 0;
  left: 0;
  border-radius: 10rpx;
}
.container .main-form .main-form-item .main-form-info .item-upload .image-background {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
  background: var(--theme-color);
  opacity: 0.08;
}
.container .main-form .main-form-item .main-form-info .item-upload .image-choose {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  right: 20rpx;
  bottom: 20rpx;
  z-index: 6;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: #ffffff;
  border-radius: 6rpx;
}
.container .main-form .main-form-item .main-form-info .item-upload .image-choose .icon {
  width: 80rpx;
  height: 80rpx;
  padding: 18rpx;
  background: var(--theme-color);
  border-radius: 50%;
}
.container .main-form .main-form-item .main-form-info .item-upload .image-choose .text {
  margin-top: 16rpx;
  color: var(--theme-color);
  font-size: 28rpx;
  line-height: 40rpx;
}
.container .main-bottom {
  padding-top: 16rpx;
  padding-bottom: 16rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  text-align: center;
  background: #FFF;
  z-index: 99;
}
.container .main-bottom .harmless-content-button {
  margin-left: 26rpx;
  margin-right: 26rpx;
  width: 700rpx;
  height: 80rpx;
  background: #325dff;
  color: white;
  text-align: center;
  line-height: 80rpx;
  border-radius: 16rpx;
}
.container .main-bottom .safe-padding {
  width: 100%;
  padding-bottom: constant(safe-area-inset-bottom);
  /* 兼容 iOS < 11.2 */
  padding-bottom: env(safe-area-inset-bottom);
  /* 兼容 iOS >= 11.2 */
}

