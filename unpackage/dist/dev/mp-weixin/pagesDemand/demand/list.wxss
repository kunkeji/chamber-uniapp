.container .container-main .main-function {
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  z-index: 99;
  background: #FFFFFF;
}
.container .container-main .main-function .main-function-screen {
  flex: 1;
  padding-right: 16rpx;
  color: #5A5B6E;
}
.container .container-main .main-function .main-function-screen .column {
  padding: 36rpx 0rpx;
  width: 25%;
  display: inline-block;
  font-size: 30rpx;
  text-align: center;
  box-sizing: border-box;
}
.container .container-main .main-function .main-search-right {
  padding: 0rpx 32rpx;
  border-left: 1rpx solid rgba(0, 0, 0, 0.1);
}
.container .container-main .main-function .main-search-right .right-icon {
  width: 40rpx;
  height: 40rpx;
  background-size: 40rpx;
}
.container .container-main .main-function .main-search-right .right-txt {
  padding-left: 8rpx;
  font-size: 30rpx;
}
.container .container-main .main-list .list-item {
  margin: 32rpx;
  padding: 32rpx;
  border-radius: 16rpx;
  background: #FFFFFF;
}
.container .container-main .main-list .list-item .item-title {
  padding-bottom: 32rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}
.container .container-main .main-list .list-item .item-title .item-title-txt {
  font-size: 28rpx;
  line-height: 40rpx;
  color: #979797;
}
.container .container-main .main-list .list-item .item-title .item-title-number {
  padding-left: 16rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #979797;
}
.container .container-main .main-list .list-item .item-title .item-title-status {
  font-size: 28rpx;
  line-height: 40rpx;
  color: #FF9100;
}
.container .container-main .main-list .list-item .demand-info {
  padding-top: 32rpx;
}
.container .container-main .main-list .list-item .demand-info .demand-info-title {
  font-weight: 600;
  font-size: 32rpx;
  line-height: 44rpx;
  color: #5A5B6E;
}
.container .container-main .main-list .list-item .demand-info .demand-info-introduce {
  padding-top: 24rpx;
  font-size: 28rpx;
  line-height: 20px;
  color: #5A5B6E;
}
.container .container-main .main-list .list-item .demand-info .demand-info-img {
  display: flex;
  justify-content: space-between;
  padding-top: 16rpx;
}
.container .container-main .main-list .list-item .demand-info .demand-info-img .info-img-size {
  border-radius: 16rpx;
  width: 200rpx;
  height: 200rpx;
}
.container .container-main .main-list .list-item .demand-info .demand-info-img .info-img-size-one {
  border-radius: 16rpx;
  width: 100%;
  height: 200rpx;
}
.container .container-main .main-list .list-item .demand-info .two-images::after {
  width: 200rpx;
  content: '';
}
.container .container-main .main-list .list-item .demand-button {
  padding-top: 32rpx;
  text-align: right;
}
.container .container-main .main-list .list-item .demand-button .demand-button-edit {
  padding: 16rpx 32rpx;
  border-radius: 8rpx;
  background: #FFB656;
  color: #FFFFFF;
}
.container .container-main .main-list .list-item .demand-button .demand-button-delete {
  margin-left: 16rpx;
  padding: 16rpx 32rpx;
  border-radius: 8rpx;
  background: #FF626E;
  color: #FFFFFF;
}

