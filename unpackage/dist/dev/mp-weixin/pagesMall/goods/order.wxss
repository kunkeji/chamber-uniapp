.container .container-main {
  padding: 32rpx 32rpx 144rpx;
}
.container .container-main .main-address {
  border-radius: 20rpx;
  padding: 32rpx;
  background: #FFF;
}
.container .container-main .main-address .main-address-area {
  display: flex;
  align-items: center;
}
.container .container-main .main-address .main-address-area .area-text {
  flex: 1;
  align-self: flex-start;
  color: #5A5B6E;
  font-size: 32rpx;
  line-height: 44rpx;
  margin-right: 80rpx;
}
.container .container-main .main-address .main-address-area .area-icon {
  width: 32rpx;
  height: 32rpx;
  background-size: 32rpx;
}
.container .container-main .main-address .main-address-personal {
  margin-top: 24rpx;
  display: flex;
  align-items: center;
}
.container .container-main .main-address .main-address-personal .personal-content {
  color: #979797;
  font-size: 30rpx;
}
.container .container-main .main-address .main-address-personal .personal-content:last-child {
  margin-left: 16rpx;
}
.container .container-main .main-cost {
  padding: 32rpx;
  margin-top: 32rpx;
  border-radius: 16rpx;
  background: #FFFFFF;
}
.container .container-main .main-cost .pt32 {
  padding-top: 32rpx;
}
.container .container-main .main-cost .main-cost-info {
  display: flex;
}
.container .container-main .main-cost .main-cost-info .main-cost-info-txt {
  flex: 1;
  font-size: 28rpx;
  color: #979797;
}
.container .container-main .main-cost .main-cost-info .main-cost-info-money {
  font-size: 28rpx;
  color: #325DFF;
}
.container .container-main .main-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  text-align: center;
  background: #FFF;
  padding: 16rpx 24rpx;
  z-index: 1;
}
.container .container-main .main-bottom .main-bottom-money {
  font-size: 40rpx;
  line-height: 56rpx;
}
.container .container-main .main-bottom .main-bottom-money .main-bottom-money-unit {
  font-size: 32rpx;
  line-height: 44rpx;
}
.container .container-main .main-bottom .main-bottom-button {
  flex: 1;
  margin-left: 24rpx;
  padding: 22rpx 0rpx 22rpx;
  background: #999999;
  color: #FFFFFF;
  text-align: center;
  line-height: 44rpx;
  border-radius: 16rpx;
}

