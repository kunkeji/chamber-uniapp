page {
  background: #F6F7FB;
}
.container .container-main {
  padding-bottom: 32rpx;
}
.container .container-main .scroll-nav {
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  z-index: 99;
  white-space: nowrap;
  background: #fff;
}
.container .container-main .scroll-nav .column {
  width: 20%;
  display: inline-block;
  font-size: 28rpx;
  line-height: 40rpx;
  text-align: center;
  padding: 44rpx 16rpx;
  box-sizing: border-box;
}
.container .container-main .main-list {
  padding: 0 29rpx;
}
.container .container-main .main-list .component-order-list .list-item {
  margin-top: 32rpx;
  padding: 32rpx;
  background: #fff;
  border-radius: 20rpx;
}
.container .container-main .main-list .component-order-list .list-item .item-header {
  margin-bottom: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.container .container-main .main-list .component-order-list .list-item .item-header .header-number {
  font-size: 28rpx;
  line-height: 40rpx;
  color: #999999;
}
.container .container-main .main-list .component-order-list .list-item .item-header .header-status {
  font-size: 28rpx;
  line-height: 40rpx;
}
.container .container-main .main-list .component-order-list .list-item .item-goods {
  padding: 32rpx 0rpx;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
}
.container .container-main .main-list .component-order-list .list-item .item-goods .goods-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 20rpx;
}
.container .container-main .main-list .component-order-list .list-item .item-goods .goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 32rpx;
  height: 160rpx;
}
.container .container-main .main-list .component-order-list .list-item .item-goods .goods-info .info-name {
  font-size: 28rpx;
  font-weight: 600;
  line-height: 40rpx;
  color: #5A5B6E;
}
.container .container-main .main-list .component-order-list .list-item .item-goods .goods-info .info-box {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.container .container-main .main-list .component-order-list .list-item .item-goods .goods-info .info-box .price {
  color: #E60012;
  font-size: 32rpx;
  font-weight: 600;
  line-height: 40rpx;
}
.container .container-main .main-list .component-order-list .list-item .item-goods .goods-info .info-box .number {
  font-size: 28rpx;
  line-height: 32rpx;
}
.container .container-main .main-list .component-order-list .list-item .item-scroll {
  padding-left: 32rpx;
  box-sizing: border-box;
  position: relative;
}
.container .container-main .main-list .component-order-list .list-item .item-scroll .scroll-goods {
  display: inline-block;
  padding: 24rpx 200rpx 24rpx 0;
}
.container .container-main .main-list .component-order-list .list-item .item-scroll .scroll-goods .goods-box {
  display: inline-block;
  margin-left: 32rpx;
}
.container .container-main .main-list .component-order-list .list-item .item-scroll .scroll-goods .goods-box:first-child {
  margin-left: 0;
}
.container .container-main .main-list .component-order-list .list-item .item-scroll .scroll-goods .goods-box .image {
  display: block;
  width: 160rpx;
  height: 160rpx;
  border-radius: 20rpx;
}
.container .container-main .main-list .component-order-list .list-item .item-scroll .scroll-goods .goods-box .name {
  display: block;
  width: 160rpx;
  font-size: 24rpx;
  font-weight: 600;
  line-height: 34rpx;
  margin-top: 12rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.container .container-main .main-list .component-order-list .list-item .item-scroll .scroll-total {
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: 9;
  min-width: 200rpx;
  padding: 0 16rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.7);
}
.container .container-main .main-list .component-order-list .list-item .item-scroll .scroll-total .num {
  font-size: 32rpx;
  line-height: 40rpx;
}
.container .container-main .main-list .component-order-list .list-item .item-scroll .scroll-total .price {
  color: #E60012;
  font-size: 36rpx;
  font-weight: 600;
  line-height: 44rpx;
  margin-top: 52rpx;
}
.container .container-main .main-list .component-order-list .list-item .item-btn {
  padding: 8rpx 0rpx 24rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.container .container-main .main-list .component-order-list .list-item .item-btn .btn {
  color: #FFF;
  font-size: 28rpx;
  line-height: 40rpx;
  padding: 16rpx 32rpx;
  min-width: 144rpx;
  box-sizing: border-box;
  text-align: center;
  border-radius: 8rpx;
  background: #FF2525;
  margin-left: 24rpx;
}
.container .container-main .main-empty .image {
  width: 600rpx;
  height: 600rpx;
  display: block;
  margin: 48rpx auto 0;
}
.container .container-main .main-empty .cont {
  color: #999;
  text-align: center;
  font-size: 28rpx;
  line-height: 40rpx;
}

